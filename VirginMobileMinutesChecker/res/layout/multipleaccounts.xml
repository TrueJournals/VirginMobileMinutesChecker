<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:id="@+id/top" android:background="@drawable/app_background"
	xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">

	<ScrollView android:layout_height="0dp"
		android:layout_width="fill_parent" android:id="@+id/accountScrollView"
		android:layout_weight="1" android:scrollbars="vertical"
		android:visibility="visible">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/accountView"
			android:orientation="vertical" />

	</ScrollView>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/progresslayout"
		android:minHeight="24dp" android:layout_margin="5dp"
		android:background="@drawable/loading_background" android:visibility="visible">
		<ProgressBar android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/thinkingIcon"
			android:indeterminate="true" android:maxHeight="20dp"
			android:minHeight="20dp" android:layout_gravity="center_vertical"
			android:maxWidth="20dp" android:minWidth="20dp"
			android:indeterminateBehavior="repeat" android:layout_marginLeft="6dp"
			android:layout_marginTop="2dp" android:layout_marginBottom="2dp" />


		<ProgressBar android:id="@+id/progress"
			android:indeterminate="false" android:focusableInTouchMode="false"
			android:layout_height="wrap_content" android:drawingCacheQuality="auto"
			android:indeterminateOnly="false" android:layout_gravity="center_vertical|center_horizontal"
			android:clickable="false" android:focusable="false"
			android:minHeight="8dp" android:maxHeight="8dp" android:layout_width="fill_parent"
			android:visibility="visible" android:progressDrawable="@drawable/progress_horizontal"
			android:layout_marginRight="10dp" android:layout_marginLeft="10dp" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<com.google.ads.AdView android:id="@+id/adView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			ads:adUnitId="INSERT ID HERE" ads:adSize="BANNER" ads:loadAdOnCreate="false" />
	</LinearLayout>

</LinearLayout>
